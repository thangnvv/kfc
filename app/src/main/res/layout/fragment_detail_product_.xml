<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Product_Detail_Fragment"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_12sdp">

    <LinearLayout
        android:layout_marginRight="@dimen/margin_right_parent"
        android:layout_marginLeft="@dimen/margin_left_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/sliderViewProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorMarginTop="@dimen/_16sdp"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/red"
                app:sliderIndicatorUnselectedColor="@color/darkGrey"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProductName"
                android:textColor="@color/black"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:text="TÊN SẢN PHẨM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <view
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:id="@+id/textViewProductPrice"
                android:textStyle="bold"
                android:textSize="@dimen/h2"
                android:textColor="@color/black"
                android:text="Giá"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>