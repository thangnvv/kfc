<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="@dimen/_60sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_4sdp"
    android:layout_marginRight="@dimen/margin_right_parent">

    <RelativeLayout
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_marginLeft="@dimen/margin_left_parent"
            android:src="@drawable/logo_kfc"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/textViewRestaurantName"
            android:text="Restaurant Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/nameRestaurant"
            android:layout_marginLeft="@dimen/margin_left_parent"
            android:layout_toRightOf="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewRestaurantAddress"
            android:textSize="@dimen/addressRestaurant"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Restaurant Address"
            android:layout_marginLeft="@dimen/margin_left_parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toRightOf="@id/imageViewLogo"
            android:layout_below="@id/textViewRestaurantName"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>