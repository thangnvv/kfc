<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:padding ="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBanner"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp">

            <ImageView
                android:background="@drawable/french_fried"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewProductName"
            android:text="Bánh Trứng (4 cái)"
            android:textSize="@dimen/h0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_toRightOf="@id/cardViewBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:textSize="@dimen/h0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="50.000đ"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/viewLine"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_below="@id/cardViewBanner"
            android:background="@color/darkGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@id/viewLine"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgButtonMinus"
                android:background="@android:color/transparent"
                android:src="@drawable/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtViewPortion"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/h2"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/imgButtonPlus"
                android:background="@android:color/transparent"
                android:src="@drawable/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/textViewTotalPrice"
                android:visibility="invisible"
                android:textSize="@dimen/h0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Total price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
